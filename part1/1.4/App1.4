import React from 'react'
const Header = (props) => {
  return (
    <div>
      <h2>Header</h2>
     
         course name : {props.course}
      
    </div>
  )
}
const Content = ({parts}) => {
  const[part1,part2,part3] = parts;
  return (
    <div>
      <h2>Content</h2>
      <p>
       part1:  {part1.name}   number of exercises : {part1.exercises}
      </p>
      <p>
      part2: {part2.name}   number of exercises :  {part2.exercises}
      </p>
      <p>
      part3: {part3.name}    number of exercises : {part3.exercises}
      </p>
    </div>
  )
}
const Total = ({parts}) => {
  const[part1,part2,part3] = parts;

  return (
    <div>
      <h2>Total</h2>
      <p>Total number of exercises : {part1.exercises+part2.exercises+part3.exercises} </p>
    </div>
  )
}
const App = () => {
  const course = 'Half Stack application development'
  const parts = [
    {
      name: 'Fundamentals of React',
      exercises: 10
    },
    {
      name: 'Using props to pass data',
      exercises: 7
    },
    {
      name: 'State of a component',
      exercises: 14
    }
  ]

  return (
    <div>
      <Header course={course} />
      <Content parts={parts} />
      <Total parts={parts} />
    </div>
  )
}

export default App;